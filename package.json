{
  "name": "keyboard-game",
  "version": "1.0.0",
  "description": "Multi-keyboard typing game for kindergarten children",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "start": "electron .",
    "dev": "npm run build && npm start",
    "copy-assets": "cp src/presentation/index.html dist/presentation/ 2>/dev/null || true && cp -r src/presentation/styles dist/presentation/ 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "demo:keyboard": "node dist/demo/keyboard-test.js",
    "demo:game": "node dist/demo/game-demo.js"
  },
  "dependencies": {
    "node-hid": "^2.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.6.2",
    "@types/node-hid": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "author": "Takatomo Ezo",
  "license": "MIT"
}
