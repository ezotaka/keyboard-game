{
  "name": "keyboard-game",
  "version": "1.0.0",
  "description": "Multi-keyboard typing game for kindergarten children",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "electron . --dev",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp src/presentation/index.html dist/presentation/ && cp src/presentation/simple-renderer.js dist/presentation/ && cp -r src/presentation/styles dist/presentation/",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "demo:keyboard": "node dist/demo/keyboard-test.js",
    "demo:game": "node dist/demo/game-demo.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac"
  },
  "dependencies": {
    "node-gyp": "^11.4.2",
    "node-hid": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.6.2",
    "@types/node-hid": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.1",
    "copyfiles": "^2.4.1",
    "electron": "^26.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^22.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.ezotaka.keyboard-game",
    "productName": "Keyboard Game",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.education",
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    }
  },
  "author": "Takatomo Ezo",
  "license": "MIT"
}
