{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "commonjs"
  },
  "include": [
    "src/main.ts",
    "src/domain/**/*",
    "src/application/**/*",
    "src/infrastructure/**/*",
    "src/shared/**/*",
    "src/demo/**/*"
  ],
  "exclude": [
    "src/presentation/views/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}