  "compilerOptions": {
    "outDir": "./dist/renderer",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/presentation/**/*",
    "src/shared/**/*"
